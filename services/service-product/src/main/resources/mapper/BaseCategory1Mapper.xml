<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.atguigu.gmall.product.mapper.BaseCategory1Mapper">

    <resultMap id="BaseResultMap" type="com.atguigu.gmall.product.entity.BaseCategory1">
            <id property="id" column="id" jdbcType="BIGINT"/>
            <result property="name" column="name" jdbcType="VARCHAR"/>

    </resultMap>

    <sql id="Base_Column_List">
        id,name
    </sql>

    <resultMap id="CategoryVoRM" type="com.atguigu.gmall.web.vo.CategoryVo">
        <id property="categoryId" column="id"></id>
        <result property="categoryName" column="name"></result>
        <collection property="categoryChild" ofType="com.atguigu.gmall.web.vo.CategoryVo">
            <id property="categoryId" column="c2Id"></id>
            <result property="categoryName" column="c2Name"></result>
            <collection property="categoryChild" ofType="com.atguigu.gmall.web.vo.CategoryVo">
                <id property="categoryId" column="c3Id"></id>
                <result property="categoryName" column="c3Name"></result>
            </collection>
        </collection>
    </resultMap>

    <select id="getCategoryVo" resultMap="CategoryVoRM">
        select bc1.id,
               bc1.name,
               bc2.id c2Id,
               bc2.name c2Name,
               bc3.id c3Id,
               bc3.name c3Name
        from base_category1 bc1
                 join base_category2 bc2
                      on bc1.id = bc2.category1_id
                 join base_category3 bc3
                      on bc2.id = bc3.category2_id
    </select>

    <select id="getCategoryView" resultType="com.atguigu.gmall.item.vo.CategoryView">
        select bc1.id category1Id,
               bc1.name category1Name,
               bc2.id category2Id,
               bc2.name category2Name,
               bc3.id category3Id,
               bc3.name category3Name
        from base_category1 bc1
                 join base_category2 bc2
                      on bc1.id = bc2.category1_id
                 join base_category3 bc3
                      on bc2.id = bc3.category2_id
        where bc3.id = #{c3Id}
    </select>
</mapper>
